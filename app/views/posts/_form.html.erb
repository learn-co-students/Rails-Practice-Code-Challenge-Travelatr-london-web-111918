<%= form_for @post do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<br><br>
<%= f.label :content %>
<%= f.text_area :content %>
<br><br>
<%= f.label :blogger_id %>
<%= f.collection_select(:blogger_id, Blogger.all, :id, :name)%>
<br><br>
<%= f.label :destination_id %>
<%= f.collection_select(:destination_id, Destination.all, :id, :name)%>
<br><br>
<%= f.submit %>
<% end %>
<br>
<%= link_to "Back to Posts Index", posts_path %>
