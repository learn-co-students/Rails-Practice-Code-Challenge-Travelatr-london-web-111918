<h2>Create a new post</h2>
<%= link_to 'Back', posts_path %>

<%= form_for @post do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :content %>
<%= f.text_field :content %>

<%= f.collection_select(:blogger_id, @bloggers, :id, :name) %>

<%= f.collection_select(:destination_id, @destinations, :id, :name) %>

<%= f.submit %>

<% end %>
